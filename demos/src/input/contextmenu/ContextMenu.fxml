<?import com.yworks.yfiles.view.GraphControl?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TitledPane?>
<?import toolkit.CommandMenuItem?>

<!-- Basic demo structure containing toolbar and graph control -->
<BorderPane xmlns:fx="http://javafx.com/fxml" >

  <!--definition of the commands that are displayed in the context menu later.-->
  <fx:define>
    <CommandMenuItem fx:id="cut" command="Cut" commandTarget="${graphControl}"/>
    <CommandMenuItem fx:id="copy" command="Copy" commandTarget="${graphControl}"/>
    <CommandMenuItem fx:id="paste" command="Paste" commandTarget="${graphControl}"/>
    <CommandMenuItem fx:id="delete" command="Delete" commandTarget="${graphControl}"/>
    <CommandMenuItem fx:id="selectAll" command="SelectAll" commandTarget="${graphControl}"/>
  </fx:define>

  <right>
    <!-- help pane that displays a short instruction for this demo -->
    <TitledPane animated="false" collapsible="false" expanded="true" maxHeight="Infinity" text="Description">
      <content>
        <WebView prefWidth="300.0" fx:id="helpView"/>
      </content>
    </TitledPane>
  </right>

  <center>
    <!-- graph control that will contain the example graph -->
    <GraphControl fx:id="graphControl"/>
  </center>

</BorderPane>