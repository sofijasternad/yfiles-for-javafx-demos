<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<DialogPane headerText="Please specify your Neo4j configuration" >
   <content>
     <GridPane alignment="CENTER_LEFT" hgap="10.0" prefWidth="300.0">
       <Label text="Database URL" GridPane.rowIndex="0"/>
       <Label text="Database Name" GridPane.rowIndex="1"/>
       <Label text="Username" GridPane.rowIndex="2"/>
       <Label text="Password" GridPane.rowIndex="3"/>
       <TextField id="dbUrlField" GridPane.columnIndex="1" GridPane.rowIndex="0">neo4j+s://demo.neo4jlabs.com</TextField>
       <TextField id="dbNameField" GridPane.columnIndex="1" GridPane.rowIndex="1">movies</TextField>
       <TextField id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="2">movies</TextField>
       <PasswordField id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3">movies</PasswordField>
     </GridPane>
   </content>
</DialogPane>
